<h1>Bienvenido a el grupo</h1>

{{grupo}}

<br>
<h2>Consultar calificación</h2>
{{#each calificaciones}}
<a href="/docente/calificacion/{{id_aag}}">{{con_act}}</a><br>
{{else}}
<h3>No tiene actividades</h3>
{{/each}}

<h2>Nueva actividad</h2>
<form action="/setMetrica" method="POST">
    <input type="text" placeholder="métrica" name="metrica" required>
    <button type="submit">Aceptar</button>
</form>

<h2>Actividades</h2>
<input class="buscar form-control" id="actividad" type="text" placeholder="Buscar">
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Actividad</th>
        </tr>
    </thead>
    {{#each actividades}}
    <tbody id="myActividad">
        <tr>
            <td>{{con_act}}</td>
            <td>
                <form action="/modActividad/{{id_act}}" method="post">
                    <button type="submit" class="btn btn-success">Modificar</button>
                </form>
            </td>
            <td>
                <form action="/delActividad/{{id_act}}" method="post">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
        {{else}}
        <tr>
            <td>---</td>
            <td>---</td>
            <td>---</td>
            <td>---</td>
            <td>---</td>
            <td>---</td>
            <td>---</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<br>
<script>
    $(document).ready(function () {
        $("#actividad").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myActividad tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>