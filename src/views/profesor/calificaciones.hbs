<script>
    $(document).ready(function () {
        $("#actividad").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myActividad tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

